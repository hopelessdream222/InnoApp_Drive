<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletDetailProd</servlet-name>
        <servlet-class>metier.action.ServletDetailProd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <jsp-file>/ajax/Accueil.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletConnexion</servlet-name>
        <servlet-class>metier.action.ServletConnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <jsp-file>/ajax/connexion.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletRechercheProd</servlet-name>
        <servlet-class>metier.action.ServletRechercheProd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProduitRecherche</servlet-name>
        <jsp-file>/ajax/ProduitRecherche.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletAffichageProd</servlet-name>
        <servlet-class>metier.action.ServletAffichageProd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDetailProd</servlet-name>
        <url-pattern>/ServletDetailProd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConnexion</servlet-name>
        <url-pattern>/ServletConnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/Connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRechercheProd</servlet-name>
        <url-pattern>/ServletRechercheProd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProduitRecherche</servlet-name>
        <url-pattern>/ProduitRecherche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAffichageProd</servlet-name>
        <url-pattern>/ServletAffichageProd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
